<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="bankingPU" transaction-type="JTA">
        <jta-data-source>bankingDS</jta-data-source>

        <class>lk.jiat.banking.entities.Customer</class>
        <class>lk.jiat.banking.entities.Account</class>
        <class>lk.jiat.banking.entities.Transaction</class>
        <class>lk.jiat.banking.entities.User</class>
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
            <property name="jakarta.persistence.sharedCache.mode" value="NONE"/>
            <property name="eclipselink.cache.shared.default" value="false"/>
        </properties>
    </persistence-unit>
</persistence>